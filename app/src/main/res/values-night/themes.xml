<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme without action bar -->
    <style name="Theme.HelloWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item> <!-- Couleur principale -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- Variante de la couleur principale -->
        <item name="colorOnPrimary">@color/black</item> <!-- Couleur du texte sur le fond primaire -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Couleur secondaire -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- Variante de la couleur secondaire -->
        <item name="colorOnSecondary">@color/black</item> <!-- Couleur du texte sur le fond secondaire -->

        <!-- Background and status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> <!-- Couleur de la barre de statut -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> <!-- Couleur de la barre de navigation -->

        <!-- Surface and error colors -->
        <item name="colorSurface">@color/white</item> <!-- Couleur de surface pour les composants -->
        <item name="colorOnSurface">@color/black</item> <!-- Couleur du texte sur la surface -->
        <item name="colorError">@color/red</item> <!-- Couleur d'erreur -->
        <item name="colorOnError">@color/white</item> <!-- Couleur du texte sur l'erreur -->
    </style>

    <!-- Tile style definition for tiles or similar elements -->
    <style name="TileStyle">
        <item name="android:layout_width">80dp</item> <!-- Largeur des tuiles -->
        <item name="android:layout_height">80dp</item> <!-- Hauteur des tuiles -->
        <item name="android:background">?attr/colorPrimary</item> <!-- Couleur de fond de la tuile, ajustée à la couleur primaire -->
        <item name="android:padding">8dp</item> <!-- Espacement intérieur -->
        <item name="android:textColor">?attr/colorOnPrimary</item> <!-- Couleur du texte sur le fond primaire -->
        <item name="android:textSize">24sp</item> <!-- Taille du texte -->
        <item name="android:gravity">center</item> <!-- Centrer le texte -->
    </style>
</resources>
