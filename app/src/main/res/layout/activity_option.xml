<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity">

    <FrameLayout
        android:id="@+id/gameFrame"
        android:background="@color/cyan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="100dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="100dp"
            android:text="@string/theme"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/buttonSombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375dp"
            android:layout_marginStart="375dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/rounded_button"
            android:text="@string/sombre" />

        <Button
            android:id="@+id/buttonClair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="225dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/rounded_button"
            android:text="@string/clair" />

        <TextView
            android:id="@+id/languageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="100dp"
            android:text="@string/langue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/language"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="250dp" />

        <!-- Remplacer l'ImageButton par un simple Button -->
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="@string/retour" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="10dp"
            android:text="@string/propos"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
