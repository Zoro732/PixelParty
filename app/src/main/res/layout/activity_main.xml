<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp">

    <!-- Grille du jeu à gauche -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <!-- Titre "Solution" au-dessus de la grille de gauche -->
        <TextView
            android:id="@+id/title_solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Votre JEU :"
            android:textSize="18sp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"> <!-- Marge ajoutée pour descendre les taquins -->

            <!-- Tuiles du jeu avec taille ajustée pour une grille 3x3 -->
            <TextView android:id="@+id/tile_1" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_2" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_3" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_4" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_5" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_6" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_7" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_8" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_9" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
        </GridLayout>

    </FrameLayout>

    <!-- Grille de la solution à droite -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <!-- Titre "Votre jeu" au-dessus de la grille de droite -->
        <TextView
            android:id="@+id/title_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solution :"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="top|center"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"/>

        <GridLayout
            android:id="@+id/solutionGrid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"> <!-- Marge ajoutée pour descendre les taquins -->

            <!-- Tuiles de la solution avec taille ajustée pour une grille 3x3 -->
            <TextView android:id="@+id/tile_1_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_2_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_3_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_4_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_5_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_6_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_7_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_8_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
            <TextView android:id="@+id/tile_9_solution" style="@style/TileStyle" android:gravity="center" android:layout_width="90dp" android:layout_height="90dp"/>
        </GridLayout>

    </FrameLayout>

</LinearLayout>
