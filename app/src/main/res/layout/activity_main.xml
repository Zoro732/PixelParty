<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="4"
        android:background="#000000"
        android:padding="4dp">

        <!-- 16 TextViews for each tile including the empty space -->
        <TextView android:id="@+id/tile_1" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_2" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_3" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_4" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_5" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_6" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_7" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_8" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_9" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_10" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_11" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_12" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_13" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_14" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_15" style="@style/TileStyle"/>
        <TextView android:id="@+id/tile_empty" style="@style/TileStyle"/>

    </GridLayout>

</LinearLayout>
