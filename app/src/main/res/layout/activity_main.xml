<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backminijeux"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Retour"
        android:fontFamily="@font/press2start"
        android:layout_marginBottom="300dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="600dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <Button
        android:id="@+id/laby"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="450dp"
        android:background="@drawable/rounded_button"
        android:text="Labyrinth"
        android:fontFamily="@font/press2start"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/run"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_button"
        android:text="Run"
        android:fontFamily="@font/press2start"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/taquin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="350dp"
        android:background="@drawable/rounded_button"
        android:text="Taquin"
        android:fontFamily="@font/press2start"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/gameMode_Solo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="250dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/press2start"
        android:text="Solo"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mini_jeux"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/press2start"
        android:textColor="@color/white"
        android:text="Mini jeux"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-90dp">

        <TextView
            android:id="@+id/mainpage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/press2start"
            android:text="@string/pixel_party"
            android:textColor="@color/white"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@drawable/settings" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/sprite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/selected_character_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Character: None"
            android:textSize="18sp"
            android:fontFamily="@font/press2start"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Sprite 1 -->
            <ImageView
                android:id="@+id/bleu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/player_blue"
                android:layout_margin="20dp"
                android:contentDescription="blue"
                android:layout_marginLeft="-20dp"  />

            <!-- Sprite 2 -->
            <ImageView
                android:id="@+id/rouge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/player_red"
                android:layout_margin="20dp"
                android:contentDescription="red"/>

            <!-- Sprite 3 -->
            <ImageView
                android:id="@+id/purple"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/player_purple"
                android:layout_margin="20dp"
                android:contentDescription="purple" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/start"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_button"
                android:text="Start"
                android:fontFamily="@font/press2start"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/back"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:text="Retour"
                android:fontFamily="@font/press2start"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/optionFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="100dp"
            android:text="Thème :"
            android:fontFamily="@font/press2start"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375dp"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="115dp"
            android:text="SOMBRE"
            android:fontFamily="@font/press2start"/>

        <Button
            android:id="@+id/buttonClair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="115dp"
            android:text="Clair"
            android:fontFamily="@font/press2start"/>

        <TextView
            android:id="@+id/languageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="100dp"
            android:text="Langue :"
            android:fontFamily="@font/press2start"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/language"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:fontFamily="@font/press2start"
            android:layout_marginTop="250dp" />

        <!-- Remplacer l'ImageButton par un simple Button -->
        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Retour"
            android:fontFamily="@font/press2start"/>

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_button"
            android:text="À propos"
            android:fontFamily="@font/press2start"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>