<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backButtonMiniGames"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="600dp"
        android:text="@string/retour"
        android:fontFamily="@font/press2start"
        android:layout_marginBottom="300dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="600dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/laby"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="450dp"
        android:layout_marginRight="450dp"
        android:background="@drawable/button_background"
        android:text="@string/labyrinth"
        android:fontFamily="@font/press2start"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/run"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_button"
        android:text="@string/run"
        android:fontFamily="@font/press2start"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/taquin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="350dp"
        android:layout_marginStart="350dp"
        android:background="@drawable/rounded_button"
        android:text="@string/taquin"
        android:fontFamily="@font/press2start"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-90dp">

        <TextView
            android:id="@+id/mainpage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/press2start"
            android:text="@string/pixel_party"
            android:textColor="@color/white"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/iv_SpriteSelectionForBoard"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="130dp"
            android:background="@drawable/start_button"
            android:layout_marginRight="130dp"
            android:layout_marginTop="205dp" />

        <ImageView
            android:id="@+id/iv_MiniGames"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="120dp"
            android:background="@drawable/more_button"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="205dp" />

        <ImageView
            android:id="@+id/iv_Settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@drawable/settings" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/sprite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/selected_character_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selected_character_none"
            android:textSize="18sp"
            android:fontFamily="@font/press2start"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/animation_background1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/border_sprite"
                    android:visibility="gone"/>
                <!-- Sprite 1 -->
                <ImageView
                    android:id="@+id/bleu"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/player_blue"
                    android:layout_margin="20dp"
                    android:contentDescription="@string/blue"
                    android:layout_marginLeft="-20dp"  />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/animation_background2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/border_sprite"
                    android:visibility="gone"/>
                <!-- Sprite 2 -->
                <ImageView
                    android:id="@+id/rouge"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/player_red"
                    android:layout_margin="20dp"
                    android:contentDescription="@string/red"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/animation_background3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp" android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/border_sprite"
                    android:visibility="gone"/>
                <!-- Sprite 3 -->
                <ImageView
                    android:id="@+id/purple"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/player_purple"
                    android:layout_margin="20dp"
                    android:contentDescription="@string/purple" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boardSpriteSelectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/startBoard"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="130dp"
                android:background="@drawable/play_button"
                android:layout_marginRight="130dp" />

            <ImageView
                android:id="@+id/backButton_BoardSpriteSelection"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/back_button"
                android:layout_marginLeft="120dp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/optionFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="100dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="100dp"
            android:text="@string/th_me"
            android:fontFamily="@font/press2start"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375dp"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="115dp"
            android:text="@string/sombre"
            android:fontFamily="@font/press2start"/>

        <Button
            android:id="@+id/buttonClair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="225dp"
            android:background="@drawable/rounded_button"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="115dp"
            android:text="@string/clair"
            android:fontFamily="@font/press2start"/>

        <TextView
            android:id="@+id/languageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="100dp"
            android:text="@string/langue"
            android:fontFamily="@font/press2start"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/language"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:fontFamily="@font/press2start"
            android:layout_marginTop="250dp" />

        <!-- Remplacer l'ImageButton par un simple Button -->

        <ImageView
            android:id="@+id/backButtonSettings"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/back_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/aboutButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/credit_button"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>