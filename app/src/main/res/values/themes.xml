<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <!-- Tile style definition for tiles or similar elements -->
    <style name="TileStyle">
        <item name="android:layout_width">80dp</item> <!-- Largeur des tuiles -->
        <item name="android:layout_height">80dp</item> <!-- Hauteur des tuiles -->
        <item name="android:background">@color/black</item> <!-- Couleur de fond de la tuile, ajustée à la couleur primaire -->
        <item name="android:padding">0dp</item> <!-- Espacement intérieur -->
        <item name="android:textColor">?attr/colorOnPrimary</item> <!-- Couleur du texte sur le fond primaire -->
        <item name="android:textSize">24sp</item> <!-- Taille du texte -->
        <item name="android:gravity">center</item> <!-- Centrer le texte -->
    </style>
</resources>
